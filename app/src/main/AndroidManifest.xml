<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eajy.materialdesigndemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.NFC" />



    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_big"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name=".service.NotifyService"
            android:enabled="true"
            android:label="NotifyService" />

        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|stateUnchanged">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>

        <!--登陆-->
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/Base.Theme.AppCompat.Light"/>

        <!--注册-->
        <activity
            android:name=".activity.RegisterActivity"
            android:label="Register"
            android:parentActivityName=".activity.LoginActivity"
            android:theme="@style/Base.Theme.AppCompat.Light"/>

        <!--注册-->
        <activity
            android:name=".activity.ChangePasswordActivity"
            android:label="Change Password"
            android:parentActivityName=".activity.LoginActivity"
            android:theme="@style/Base.Theme.AppCompat.Light">
        </activity>

        <!--下拉-->
        <activity
            android:name=".activity.RecyclerViewActivity"
            android:label="@string/title_activity_recycler_view"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar_StatusBar" />


        <activity
            android:name=".activity.ShareViewActivity"
            android:label="@string/title_activity_share_view"
            android:theme="@style/AppTheme.NoActionBar_StatusBar" />

        <!--展示文章-->
        <activity
            android:name=".activity.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--全屏-->
        <activity
            android:name=".activity.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" />

        <!--全屏一键购买-->
        <activity
            android:name=".activity.StartBuyActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" >
        </activity>

        <activity
            android:name=".activity.BottomNavigationActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--设置-->
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/Base.Theme.AppCompat.Light"/>

        <!--关于右上角-->
        <activity
            android:name=".activity.AboutActivity"
            android:label="@string/title_activity_add"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar_StatusBar" />

        <!--添加设备-->
        <activity
            android:name=".activity.AddDeviceActivity"
            android:label="添加设备"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar_StatusBar" />

        <activity
            android:name=".activity.OrderInfoActivity"
            android:label="订单信息"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar_StatusBar" />

        <!--捐赠-->
        <activity
            android:name=".activity.DonateActivity"
            android:label="@string/activity_donate"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar_StatusBar" />

        <activity android:name=".activity.MyAppsActivity"
            android:label="@string/activity_my_apps"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar_StatusBar"/>

        <!--存储元数据应该没什么用-->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!--广告-->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

    </application>

</manifest>